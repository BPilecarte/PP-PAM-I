<Shell
    x:Class="AppTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppTest"
    Shell.FlyoutBehavior="Disabled"
    Title="AppTest">

    <TabBar>

        <Tab Title="Home" Icon="home.png">
            <ShellContent Title="Home"
                              ContentTemplate="{DataTemplate local:MainPage}"
                              Route="MainPage"/>
        </Tab>

        <Tab Title="Roll Dice" Icon="dice_page.png">
                <ShellContent Title="DicePage"
                              ContentTemplate="{DataTemplate local:DicePage}"
                              Route="DicePage"/>
            </Tab>
        
            <Tab Title="Page 3" Icon="settings.png">
                <ShellContent Title="Page 3"
                              ContentTemplate="{DataTemplate local:Page3}"
                              Route="Page3"/>
            </Tab>

    </TabBar>

</Shell>
