<Shell
    x:Class="AppTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppTest.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AppTest">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
                <ShellContent Title="Home"
                              ContentTemplate="{DataTemplate local:MainPage}"
                              Route="MainPage"/>
            </Tab>

            <Tab Title="Dice Game" Icon="dice_page.png">
                <ShellContent Title="Dice Game"
                              ContentTemplate="{DataTemplate local:DiceGameView}"
                              Route="DiceGame"/>
            </Tab>

            <Tab Title="RPG" Icon="shieldp.png">
                <ShellContent Title="RPG"
                              ContentTemplate="{DataTemplate local:RpgGameView}"
                              Route="RpgGame"/>
            </Tab>
        
            <Tab Title="Settings" Icon="settings.png">
                <ShellContent Title="Settings"
                              ContentTemplate="{DataTemplate local:SpellsView}"
                              Route="Settings"/>
            </Tab>

    </TabBar>

</Shell>
